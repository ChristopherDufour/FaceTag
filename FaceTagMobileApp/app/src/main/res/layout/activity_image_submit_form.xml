<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="facetag.facetagmobileapp.ImageSubmitFormActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSubmitTitleEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:hint="Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        android:id="@+id/imageSubmitPickButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Image"
        android:id="@+id/imageSubmitPostButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageSubmitImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSubmitImageView"
        android:layout_alignRight="@+id/imageSubmitPostButton"
        android:layout_alignEnd="@+id/imageSubmitPostButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageSubmitPickButton"
        android:layout_below="@+id/imageSubmitTitleEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:id="@+id/imageSubmitCameraButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageSubmitPickButton"
        android:layout_below="@+id/imageSubmitImageView"
        android:layout_toLeftOf="@+id/imageSubmitPostButton"
        android:layout_toStartOf="@+id/imageSubmitPostButton" />
</RelativeLayout>
